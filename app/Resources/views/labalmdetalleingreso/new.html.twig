{% extends 'main.html.twig' %}
{% block css %}

<style type="text/css">
    #divi { height: 280px; }
</style>

{% endblock %}
{% block body %}
{% for flashMessaje in app.session.flashbag.get ('mensaje')%}
            <div  class="alert alert-success alert-dismissible" role="alert" >
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
                 {{ flashMessaje}}
            </div>
        {% endfor%}
        {% for flashMessaje in app.session.flashbag.get ('advertencia')%}
            <div  class="alert alert-warning alert-dismissible" role="alert" >
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
                 {{ flashMessaje}}
            </div>
        {% endfor%}
        {% for flashMessaje in app.session.flashbag.get ('error')%}
            <div  class="alert alert-danger alert-dismissible" role="alert" >
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
                 {{ flashMessaje}}
            </div>
        {% endfor%}
    <div class="row">
              <div class="col-md-8 col-md-offset-1 col-sm-8 col-sm-offset-1 col-xs-8 col-xs-offset-1">
                <div id='divi' class="x_panel" >
                  <div class="x_title">
                    <h2>Ingreso <small>Agregar Productos</small></h2>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                {{ form_start(form) }}
                <div class="ln_solid"></div>
                <div class="form-group">
                  <div class="col-md-12">
                    {{ form_widget(form) }}
                    <a href="{{ path('labalmingreso_edit', { 'id': labAlmIngreso.id }) }}"  class="btn btn-default"><b><i class="fa fa-caret-left" aria-hidden="true"></i> Atras</b>  </a>
                    <input class="btn btn-success" type="submit" value="Agregar al listado" />
                    <a href="{{ path('labalmingreso_show', { 'id': labAlmIngreso.id }) }}"  class="btn btn-default"><b>Siguiente <i class="fa fa-caret-right" aria-hidden="true"></i></b>  </a>
                  </div>
                </div>
                {{ form_end(form) }}
              </div>
            </div>
          </div>
        </div>
    {% include 'labalmdetalleingreso/index.html.twig' with {'labAlmDetalleingresos':labAlmDetalles}%}
{% endblock %}

{% block javascripts %}
                {{ form_javascript(form) }}
{% endblock javascripts %}
