<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Caja Petrolera de Salud{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('logo.png') }}" />
        <!-- Bootstrap -->
        <link href="{{ asset('build/css/base.css') }}" rel="stylesheet">
        <link href="{{ asset('vendors/bootstrap/dist/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('build/css/base.css') }}" rel="stylesheet">
    <style>
         .ptitle{
            width: 100%;
            height: 100%;
        }
        .ptitle > h1{
            z-index: 100;
            text-align: center;
            color: #fff;
            font-size: 65px;
        }
        .ptitle > h2{
            margin-top: 10%;
            z-index: 100;
            text-align: center;
            color: #fff;
        }
        .ptitle > a:hover{
            text-decoration: none;
        }
        .ptitle > a:focus{
            text-decoration: none;
        }
        center{
            margin-top: 8%;
        }
        .ptitle> center > a{
            position: static;
            opacity: 0.5;
            font-size: 20px;
            padding: 25px 20px;
            border-radius: 5px;
            background-color:#069887;
            color: #fff;
            font-weight: bold;
        }
        .ptitle > center > a:hover{
            text-decoration: none;
            opacity: 0.9;
        }
    </style>
    </head>
    <body>
        <nav class="navbar navbar-default navbar-fixed-top">
             <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                    </button>
                        <img class="logo" src="{{ asset('logo.png') }}" alt="logo"> <a href="#" class="titulo">Caja Petrolera de Salud</a>
                </div>
            </div>
        </nav>
        {% block body %}
        <div class="ptitle">
					<h2>Bienvenido al</h2>
					<h1> Sistema de Archivo</h1>
					<center><a href="{{ path('busemp') }}"> Ingresar Ahora <span class="glyphicon glyphicon-log-in" ></span></a></center>
      		</div>
        {% endblock %}
        {% block javascripts %}
        <script src="{{ asset('vendor/jquery/jquery.js') }}" type="text/javascript">  </script>
		<script src="{{ asset('vendor/jquery/jquery.backstretch.min.js') }}" type="text/javascript">  </script>
		<script type="text/javascript">
            $(document).ready(function() {
               $.backstretch(["{{ asset('fondo.png') }}"]);
            });
        </script>
        {% endblock %}
    </body>
</html>
