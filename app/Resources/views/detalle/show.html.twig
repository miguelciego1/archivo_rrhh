{% extends 'base.html.twig' %}

{% block body %}
    <h1>detalle</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ detalle.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ detalle.nombre }}</td>
            </tr>
            <tr>
                <th>Archivo</th>
                <td>{{ detalle.archivo }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
